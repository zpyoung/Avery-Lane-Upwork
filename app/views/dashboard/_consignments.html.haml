#consignments
    .container-fluid
        .row
            .col-xs-12
                .panel
                    .panel-body
                        %table.table.consignmentTable
                            %thead
                                %tr
                                    %th Date
                                    %th Status
                                    %th Consigner Number
                                    %th Consigner Name
                                    %th # of Items
                                    %th
                            %tbody
                                - @consignments.each do |c|
                                    %tr
                                        %td= c.updated_at.strftime("%D - %I:%M%p")
                                        %td
                                            -if c.status === "new_consignment"
                                                %span.label.label-info New
                                            -elsif c.status === "approved"
                                                %span.label.label-success Approved
                                            -elsif c.status === "partially_approved"
                                                %span.label.label-warning Partially Approved
                                            -elsif c.status === "rejected"
                                                %span.label.label-danger Rejected
                                            -elsif c.status === "needs_contract"
                                                %span.label.label-warning Needs Contract
                                            -else
                                                %span.label.label-info New

                                        %td &num;#{c.consigner_number}
                                        %td #{c.first_name} #{c.last_name}
                                        %td= c.items.count
                                        %td.actions
                                            = link_to fa_icon("trash"), consignment_path(c), remote: true, title: "Delete", method: :delete, action: :destroy, data: { confirm: "Are you sure you want to delete this consignment? You cannot undo this action." }, class: "delete_section_item pull-right"
                                            = link_to fa_icon("files-o"), duplicate_consignment_path(consignment_id: c.id), method: :post, action: :duplicate_consignment, target: "_self", title: "Duplicate", data: { confirm: "Are you sure you want to duplicate this consignment?", type: "accept" }, class: "pull-right"
                                            = link_to fa_icon("pencil"), edit_consignment_path(c), class: "pull-right", title: "Edit"
                                            = link_to fa_icon("send"), change_status_path(consignment_id: c.id), method: :post, action: :change_status, class: "pull-right", title: "Change Status", remote: true, data: { confirm: "Are you sure you want send this Consignment and it's Items to Trello?" }


        .modal.fade#consignment_modal

:javascript
    $.fn.dataTable.moment( 'M/D/YY - hh:mmA' );
    $('.consignmentTable').DataTable( {
        "language": {
        "search": "",
        "lengthMenu": "Display _MENU_ Items per page",
        "zeroRecords": "No Items Found - Click 'Add New' to create one.",
        "info": "Showing _START_ to _END_ of _TOTAL_ Total Items",
        "infoEmpty": "No Items Here - Click 'Add New' to create one.",
        "searchPlaceholder": "Search Items..."
        },
        "dom": '<"wrapper"ftlp>',
        "order": [[ 0, "desc" ]],
        "bFilter": true,
        "bInfo": false,
        "bAutoWidth": false,
        "aoColumns": [
        	null,
        	null,
        	null,
        	null,
        	null,
        	{ "bSortable": false }
        ]
    } );
